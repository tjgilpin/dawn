<section class="container mx-auto bg-{{ section.settings.section_background_color }} m-{{ section.settings.section_margin }} p-{{ section.settings.section_padding }}">
  <div class="flex {% if section.settings.layout == 'text_first' %} flex-row-reverse {% endif %} ">
    <div class="image-with-text__media min-h-full flex w-1/2 bg-transparent image-with-text__media--{{ section.settings.height }} {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}">
      {%- if section.settings.image != blank -%}
        <img srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: '165x' }} 165w,{%- endif -%}
          {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: '360x' }} 360w,{%- endif -%}
          {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | image_url: '535x' }} 535w,{%- endif -%}
          {%- if section.settings.image.width >= 720 -%}{{ section.settings.image | image_url: '720x' }} 720w,{%- endif -%}
          {%- if section.settings.image.width >= 940 -%}{{ section.settings.image | image_url: '940x' }} 940w,{%- endif -%}
          {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | image_url: '1070x' }} 1070w{%- endif -%}"
          src="{{ section.settings.image | image_url: '533x' }}"
          sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        >
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
    <div class="flex flex-col items-start justify-center w-1/2 h-full pt-16 pb-20 pl-16 pr-16 image-with-text__content">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'heading' -%}
            <h2 class="py-{{ block.settings.vertical_padding }} text-{{ block.settings.font_size }} text-{{ block.settings.color }}">{{ block.settings.text }}
              {{ block.settings.heading | escape }}
            </h2>
          {%- when 'text' -%}
            <div class="py-{{ block.settings.vertical_padding }} text-{{ block.settings.font_size }} text-{{ block.settings.color }}">{{ block.settings.text }}</div>
          {%- when 'button' -%}
            {%- if block.settings.button_label != blank -%}
              <a{% if block.settings.button_link != blank %} href="{{ block.settings.button_link }}"{% endif %} class="button mt-2 bg-primary"{% if block.settings.button_link == blank %} aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
                {{ block.settings.button_label | escape }}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

